<!DOCTYPE html>
<html>
  <head>
    <title>Memeable</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script
      src="https://use.fontawesome.com/releases/v5.13.0/js/all.js"
      data-auto-a11y="true"
    ></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Lilita+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;1,300&display=swap" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    <%= render 'layouts/nav' %>
    <div class="notifications">
      <p id="notice"><%= notice %></p>
      <p id="alert"><%= alert %></p>
    </div>
    <main class="main-container">
      <%= yield %>
    </main>
    <% if @show_button %>
      <div class="create-meme-button">
        <a href="/memes/new"><img src="/logo.png" alt=""></a>
        <%= link_to  "New meme", "/memes/new", class:"create-meme-link" %>
      </div>
    <% end %>
    <%= render 'layouts/footer' %>
  </body>
</html>
